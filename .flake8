[flake8]
# Flake8 configuration

max-line-length = 100
max-complexity = 10

# Ignore specific errors
extend-ignore =
    E203,  # Whitespace before ':'  (conflicts with black)
    W503,  # Line break before binary operator (conflicts with black)
    E501,  # Line too long (handled by black)

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .tox,
    .mypy_cache,
    .pytest_cache,
    docs,
    migrations,
    airflow/logs

# Per file ignores
per-file-ignores =
    __init__.py:F401

# Count errors
count = True
statistics = True


claude.md # Enable flake8 plugins
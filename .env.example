# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# ==================== General ====================
ENVIRONMENT=development
DEBUG=False
PROJECT_NAME=bike-demand-prediction
PROJECT_VERSION=0.1.0

# ==================== Database ====================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_DATABASE=bike_demand_db

# ==================== Citi Bike API ====================
CITIBIKE_BASE_URL=https://gbfs.citibikenyc.com/gbfs/en
CITIBIKE_STATION_INFORMATION_URL=https://gbfs.citibikenyc.com/gbfs/en/station_information.json
CITIBIKE_STATION_STATUS_URL=https://gbfs.citibikenyc.com/gbfs/en/station_status.json
CITIBIKE_TIMEOUT=30

# ==================== OpenWeatherMap API ====================
# Get your free API key from: https://openweathermap.org/api
WEATHER_API_KEY=your_openweathermap_api_key_here
WEATHER_BASE_URL=https://api.openweathermap.org/data/2.5
WEATHER_UNITS=metric
WEATHER_TIMEOUT=30

# ==================== MLflow ====================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=bike_demand_forecasting
MLFLOW_ARTIFACT_LOCATION=./mlruns
MLFLOW_MODEL_REGISTRY_URI=

# ==================== Airflow ====================
AIRFLOW_HOME=./airflow
AIRFLOW_DAGS_FOLDER=./airflow/dags
AIRFLOW_EXECUTOR=LocalExecutor
AIRFLOW_LOAD_EXAMPLES=False
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql://postgres:postgres@localhost:5432/airflow_db
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__DAGS_FOLDER=./airflow/dags

# ==================== Model Training ====================
MODEL_RANDOM_SEED=42
MODEL_TRAIN_SPLIT=0.7
MODEL_VAL_SPLIT=0.15
MODEL_TEST_SPLIT=0.15
MODEL_FORECAST_HORIZON_HOURS=24
MODEL_RETRAINING_INTERVAL_DAYS=7

# ==================== Feature Engineering ====================
FEATURE_LAG_HOURS=[1,3,6,12,24,48,168]
FEATURE_ROLLING_WINDOWS=[3,6,12,24]
FEATURE_VERSION=v1.0

# ==================== FastAPI ====================
API_TITLE=Bike Demand Prediction API
API_DESCRIPTION=Level 2 MLOps bike demand forecasting system
API_VERSION=0.1.0
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=False
API_LOG_LEVEL=info

# ==================== Monitoring ====================
MONITORING_ENABLE_PROMETHEUS=True
MONITORING_ENABLE_DATA_DRIFT_DETECTION=True
MONITORING_DRIFT_DETECTION_THRESHOLD=0.3
MONITORING_PERFORMANCE_DEGRADATION_THRESHOLD=0.1

# ==================== DVC ====================
DVC_REMOTE_NAME=origin
# For S3: s3://your-bucket-name/path
# For Google Drive: gdrive://your-folder-id
# For local: /path/to/local/storage
DVC_REMOTE_URL=

# ==================== AWS S3 (Optional, for DVC) ====================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=

# ==================== Google Cloud (Optional, for DVC) ====================
GOOGLE_APPLICATION_CREDENTIALS=

# ==================== Streamlit ====================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# ==================== Docker ====================
COMPOSE_PROJECT_NAME=bike-demand-prediction

# ==================== Logging ====================
LOG_LEVEL=INFO

# ==================== Alerting (Optional) ====================
SLACK_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# ==================== Redis (Optional, for caching) ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
